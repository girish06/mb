<div class="login-page reset-pass row">
  <div class="col-sm-6 col-md-5 left-side-image">
    <img src="{{base_path ~ directory }}/images/login-01@3x.png">
  </div>

  <div class="col-sm-6 col-md-7 right-side-form">
    <section class="open_banking_header">
      <header{{ navbar_attributes.addClass(navbar_classes) }} id="navbar" role="banner">
        <div class="site-branding-wrap mb-header">
          <div class="site-logo"><a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-logo"><img src="{{base_path ~ directory }}/images/logo-mb-new.png"></a></div>
          <div class="site-slogan-wrap">
            <span class="site-name">Cổng phát triển của Ngân hàng MB</span>
            <span class="site-slogan">Cung cấp bởi MB Bank</span>
          </div>
         </div>
      </header>
    </section>
    <div class="site-branding-wrap mb-hide">
      <div class="site-logo"><a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home" class="site-logo"><img src="{{base_path ~ directory }}/images/logo-mb-new.png"></a></div>
      <div class="site-slogan-wrap">
        <span class="site-name">Cổng phát triển của Ngân hàng MB</span>
        <span class="site-slogan">Cung cấp bởi MB Bank</span>
      </div>
     </div>
    <div class="login-form">
      <h2>Đổi mật khẩu</h2>
      {# Header #}
      {#{% if page.header %}#}
        {#{% block header %}#}
          {#<div class="col-sm-12" role="heading">#}
            {#{{ page.header }}#}
          {#</div>#}
        {#{% endblock %}#}
      {#{% endif %}#}
      {% if page.content_header %}
        {% block content_header %}
          <div class="col-sm-12" role="heading">
            {{ page.content_header }}
          </div>
        {% endblock %}
      {% endif %}
      {# Content #}
      {% block content %}
        <a id="main-content"></a>
        {{ page.content }}
      {% endblock %}
    </div>
  </div>
</div>